 package MisClases;

public class Juego {
	
	final int private numFilas=6;
	final int private numColumnas=7;

	
	private char[][]tablero;
	
	//CONSTRUCTOR
	
	Juego(){
		
		tablero= new char [numFilas][numColumnas];
	}
	
	void vaciarTablero() {
		
		for(int i=0;i<numFilas;i++) {
			for(int j=0;j<numColumnas;j++) {
				tablero[i][j]=' ';
			}
			
			numCasillasVacias=num
			
		}
		
	}
}
